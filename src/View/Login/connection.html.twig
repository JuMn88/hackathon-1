{% extends 'layout.html.twig' %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/login.css">
{% endblock %}

{% block content %}
    <main class="container col-4">
        <h2 class="my-4 text-center">
            Log into your account
        </h2>
        <ul class="alert alert-danger list-unstyled empty">
            {%- for error in errors -%}
                <li>{{ error }}</li>
            {%- endfor -%}
        </ul>
        <form method="POST" class="my-3 login-form" novalidate>
            <fieldset>
                <div class="mb-3 input">
                    <input type="text" class="mt-3 px-3 form-control login-input" id="login" 
                        name="login" aria-describedby="loginHelpBlock" placeholder="Username" required>
                    {% if login is not empty %}
                        <small id="loginHelpBlock" class="px-3 form-text text-muted">
                            There's no {{ login }} on Mars. Be free to sign up !
                        </small>
                    {% endif %}
                </div>
                <div class="d-flex justify-content-center">
                    <button class="mb-3 btn btn-orange">Log in</button>
                    <a class="mx-2 mb-3 btn btn-orange" href="/home/index">Back</a>
                </div>
            </fieldset>
        </form>
    </main>
{% endblock %}
